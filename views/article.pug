extends layout

block content
    h1= article.title
    h5 Written By #{author}
    p= article.body
    hr
    if user
        if user.id == article.author
            a.btn.btn-outline-primary(href='/articles/edit/'+article._id) Edit
            a.btn.btn-outline-danger.delete-article(href='#', data-id=article._id) Delete
